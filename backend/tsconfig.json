{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "allowJs": true,
        "outDir": "./dist",
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["**/*.js", "**/*.ts", "./utils/constants.json"]
}
